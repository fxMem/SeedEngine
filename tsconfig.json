{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es6",
      "sourceMap": true,
      "baseUrl": "./src",
      "paths": {
        "@core": ["./core"],
        "@transport": ["./transport"],
        "@transport/*": ["./transport/*"],
        "@users": ["./users"],
        "@users/*": ["./users/*"],
        "@session": ["./session"],
        "@session/*": ["./session/*"],
        "@lobby": ["./lobby"],
        "@lobby/*": ["./lobby/*"],
        "@game": ["./game"],
        "@log": ["./log"],
        "@utils": ["./utils"],
        "@client": ["./client"],
        "@client/*": ["./client/*"]
      }
    },
    "exclude": [
      "node_modules"
    ],
}